+static int wpa_supplicant_ctrl_iface_get_data_routing_mode(
+  struct wpa_supplicant *wpa_s, char *cmd, char *buf, size_t buflen)
+{
+  int ret;
+  char *pos, *end;
+
+  pos = buf;
+  end = buf + buflen;
+
+  ret = os_snprintf(pos, end - pos, "mode=%s_ADDRESS_MODE\n",
+    wpa_s->conf->wds ? "4" : "3");
+  if (os_snprintf_error(end - pos, ret))
+    return -1;
+  pos += ret;
+
+  return pos - buf;
+}
